    <dimen name="settings_page_margin_horizontal">@dimen/car_ui_margin</dimen>
    <!-- car_ui_padding_7 not available in aosp/master car-ui-lib -->
    <dimen name="car_ui_padding_7">64dp</dimen>
    <dimen name="settings_page_margin_vertical">@dimen/car_ui_padding_7</dimen>
    <dimen name="settings_content_margin">@dimen/car_ui_padding_4</dimen>
