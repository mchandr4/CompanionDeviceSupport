    <dimen name="suw_primary_icon_size">@dimen/car_primary_icon_size</dimen>
    <dimen name="suw_secondary_icon_size">@dimen/car_secondary_icon_size</dimen>

    <dimen name="suw_title_text_size">@dimen/car_display3_size</dimen>
    <dimen name="suw_subtitle_text_size">@dimen/car_body3_size</dimen>

    <dimen name="suw_list_item_text_margin_start">@dimen/car_keyline_2</dimen>
    <dimen name="suw_list_item_text_no_icon_margin_start">@dimen/car_keyline_1</dimen>
    <dimen name="suw_list_item_text_margin_end">@dimen/car_keyline_1</dimen>
    <dimen name="suw_list_item_min_height">@dimen/car_single_line_list_item_height</dimen>
