<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/list_item_focus_pressed_fill_color"/>
            <stroke android:width="@dimen/list_item_background_pressed_stroke_width"
                    android:color="@color/list_item_focus_pressed_stroke_color"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/list_item_focus_fill_color"/>
            <stroke android:width="@dimen/list_item_background_focus_stroke_width"
                    android:color="@color/list_item_focus_stroke_color"/>
        </shape>
    </item>
    <item>
        <ripple android:color="?android:attr/colorControlHighlight">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="?android:colorAccent"/>
                </shape>
            </item>
        </ripple>
    </item>
</selector>
