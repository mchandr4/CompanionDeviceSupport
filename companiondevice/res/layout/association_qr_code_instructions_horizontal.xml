<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/association_instructions_horizontal"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false">
  <LinearLayout
      android:id="@+id/enable_bluetooth_instruction"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginHorizontal="@dimen/instruction_margin"
      android:orientation="vertical"
      android:gravity="center_horizontal">
    <ImageView
        android:id="@+id/enable_bluetooth_icon"
        android:layout_width="?attr/companionSecondaryIconSize"
        android:layout_height="?attr/companionSecondaryIconSize"
        android:scaleType="fitXY"
        android:src="@drawable/ic_bluetooth_drive_24dp"
        android:tint="?attr/companionColorListIcon"
        tools:ignore="ContentDescription"/>
    <TextView
        android:id="@+id/enable_bluetooth_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/enable_bluetooth_instruction_text"
        android:textAppearance="@style/CompanionSubtitleTextStyle" />
  </LinearLayout>
</LinearLayout>
